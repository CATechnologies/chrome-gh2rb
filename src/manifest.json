{
    "manifest_version": 2,

    "name": "GitHub -> Redbooth",
    "version": "0.0.1",
    "description": "Creates links from GitHub to Redbooth",

    "permissions": [
        "storage",
        "https://github.com/*"
    ],

    "background": {
        "scripts": ["gh2rb.js"],
        "persistent": false
    },

    "options_page": "options.html",

    "content_scripts": [{
        "matches": ["https://github.com/*"],
        "js": ["create-links.js"]
    }]
}
